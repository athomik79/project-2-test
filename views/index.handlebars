<div class="container">
    
    <div class="jumbotron">
        <h1 class="display-3">Travel Wishlist</h1>
        <p class="lead">Search for Destinations.</p>
         <p class="lead">Add them to your Wishlist or Travel Journal.</p>
        <panel>
            <form class="create-form">
                <div class="form-group">
                  {{!-- <label for="newburger">Choose a Destination</label> --}}
                  <input data-placeholder="Search a Destination" id="search_term" name="burger">
                  <button type="submit" class="btn" id="find">
                      <span class="fas fa-map-marker-alt">My Location</span>
                  </button>
                  <button type="submit" class="btn" id="search">
                      <span class="fas fa-search">Search</span>
                  </button>
                  <button type="submit" class="btn" id="wish">
                      <span class="fas fa-map-marked-alt">Wishlist</span>
                  </button>
                </div>
            </form>
            <div id="map">Location Map</div>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card card-default">
                <div class="card-header" id="leftside"><strong>Travel Wishlist</strong>
                {{!-- <p>Send order when you're ready</p> --}}
                </div>
                
                <div class="card-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fas fa-passport"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
    <div class="col-sm-6">
            <div class="card card-default">
                <div class="card-header" id="rightside"><strong>My Travel Journal</strong>
                {{!-- <p>Eat your Burger!</p> --}}
                </div>
            
                <div class="card-body">

                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fas fa-suitcase"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>

    </div>
    <!--endrow -->
    </div>
    <!--enccontainer -->